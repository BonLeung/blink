/* components/book/index.wxss */
.container {
  position: relative;
  width: 240rpx;
  height: 360rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.description {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 5rpx 10rpx 8rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-bottom-left-radius: 2px;
  border-bottom-right-radius: 2px;
  background-color: #fff;
  font-size: 24rpx;
}

.title {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.author {
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20rpx;
  color: #999;
}

.foot {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}

.footer {
  color: #666;
}